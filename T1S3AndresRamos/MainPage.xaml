<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T1S3AndresRamos.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
            <Image Source="logouisrael.png"/>
        </Frame>
        <Label Text="INGRESO AL SISTEMA" FontSize="Title" Padding="30,10,30,10" HorizontalTextAlignment="Center"/>
        <Entry x:Name="txtUsuario" 
                   HorizontalTextAlignment="Center" 
                   Placeholder="Ingrese su Usuario" 
                   Keyboard="Text">
        </Entry>
        <Entry x:Name="txtPassword" 
                   HorizontalTextAlignment="Center" 
                   Placeholder="Contraseña" 
                   Keyboard="Text"
                   IsPassword="true">
        </Entry>
        <Button Text="INGRESAR"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked" />
    </StackLayout>

</ContentPage>
